import java.util.ArrayList;   
import java.util.Scanner;   
import java.util.Spliterator;   
   
// SpliteratorExample2 class to understand how to use Spliterator with Collections   
public class SpliteratorExample2   
{   
    // main() method start   
    public static void main(String[] args)   
    {   
        int size;   
          
        // create a Scanner class object to take input from the user   
        Scanner sc = new Scanner(System.in);   
          
          
        // Create an array list for ages.   
        ArrayList<Integer> ages;   
          
        System.out.println("Enter size of the ArrayList:");   
        size = sc.nextInt();   
          
        ages = new ArrayList<Integer>(size);   
          
        for(int i = 0; i < size; i++) {   
            System.out.println("Enter "+(i+1)+" Age:");   
            int data = sc.nextInt();   
            ages.add(data);   
        }   
          
        // close Scanner class object   
        sc.close();   
          
        // use tryAdvance() method to print ArrayList elements   
        System.out.println("Elements of the ArrayList: ");   
          
        // use spliterator() method to obtain Spliterator object on ages   
        Spliterator<Integer> spliterator1 = ages.spliterator();   
          
        while(spliterator1.tryAdvance((n) -> System.out.println(n)));   
          
        // Use tryAdvance() to get absolute values of elements of ArrayList.   
          
        // create a new list that contains absolute values.   
        ArrayList<Integer> newAges = new ArrayList<>();   
          
        spliterator1 = ages.spliterator();   
          
        while(spliterator1.tryAdvance((n) -> newAges.add(Math.abs(n))));   
          
        System.out.print("Absolute values of the elements of the ArrayList:\n");   
          
        // use spliterator() to get Spliterator object on newAges   
        spliterator1 = newAges.spliterator();   
          
          
        while(spliterator1.tryAdvance((n) -> System.out.println(n)));   
          
    }   
}   



